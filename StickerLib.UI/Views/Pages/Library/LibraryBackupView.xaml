<Page x:Class="StickerLib.UI.Views.Pages.Library.LibraryBackupView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:StickerLib.UI.Views.Pages"
      DataContext="{Binding LibraryBackup, Source={StaticResource Locator}}"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="14"
      FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibraryBackupView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--Help information block-->
        <StackPanel Orientation="Vertical"
                    Grid.Row="0" 
                    Grid.Column="0"
                    Margin="20">
            <TextBlock Text="BackUp and Restore"
                       Style="{DynamicResource MaterialDesignTitleTextBlock}"/>
            <TextBlock>
                Here someome description for backup and recovery functions
            </TextBlock>
        </StackPanel>

        <StackPanel Orientation="Vertical"
                    Grid.Row="1"
                    Margin="20 0">
                <Grid>
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="10"
                                          ShadowDepth="3"
                                          Direction="-90"
                                          Opacity=".7"/>
                    </Grid.Effect>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            BorderThickness="0 0 1 0"
                            BorderBrush="LightGray"
                            CornerRadius="5 0 0 5"
                            Background="{StaticResource LightThemeBackground}"
                            Padding="30">
                        <Image Source="../../../Images/database.png"></Image>
                    </Border>

                    <Border Grid.Column="1"
                            Padding="10"
                            CornerRadius="0 5 5 0"
                            TextElement.Foreground="{StaticResource LightThemeForeground}"
                            Background="{DynamicResource BlueGray_50}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border BorderThickness="0 0 0 1"
                                    BorderBrush="LightGray"
                                    Padding="0 0 0 15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Grid.Column="0">
                                        <md:PackIcon Kind="CheckCircle"
                                                     Foreground="{DynamicResource SecondaryAccentBrush}"
                                                     Margin="0 0 5 0"
                                                     Width="24"
                                                     Height="24"
                                                     VerticalAlignment="Center"/>
                                        <TextBlock Style="{StaticResource MaterialDesignTitleTextBlock}">
                                            Daily backup
                                        </TextBlock>
                                    </StackPanel>

                                    <Button Style="{DynamicResource MaterialDesignToolButton}"
                                            Grid.Column="1">
                                        <md:PackIcon Kind="Menu"
                                                     VerticalAlignment="Center"
                                                     Width="30"
                                                     Height="20"/>
                                    </Button>
                                </Grid>
                            </Border>
                            <StackPanel Orientation="Vertical"
                                        Margin="0 10"
                                        Grid.Row="1">
                                <UniformGrid Columns="3">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}">
                                            Last backup:
                                        </TextBlock>
                                        <TextBlock Text="Never"
                                                   Foreground="{DynamicResource ValidationErrorBrush}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}">
                                            Next backup:
                                        </TextBlock>
                                        <TextBlock Text="Not setup"
                                                   Foreground="{DynamicResource ValidationErrorBrush}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}">
                                            Total size:
                                        </TextBlock>
                                        <TextBlock Text="0 Mb"/>
                                    </StackPanel>
                            </UniformGrid>
                            </StackPanel>
                        </Grid>
                    </Border>

                </Grid>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    Margin="20 20 20 0"
                    HorizontalAlignment="Right">
            <!--<Button Margin="20 0"
                    Command="{Binding AcceptCommand, Mode=OneWay}">
                <StackPanel Orientation="Horizontal">
                    <md:PackIcon Kind="ContentSave" />
                    <TextBlock Text="Save" Margin="10 0 0 0" />
                </StackPanel>
            </Button>-->
            <Button Style="{StaticResource MaterialDesignRaisedAccentButton}"
                    Command="{Binding NavigateToCommand, Mode=OneWay}"
                    CommandParameter="library">
                <StackPanel Orientation="Horizontal">
                    <md:PackIcon Kind="Cancel" />
                    <TextBlock Text="Cancel" Margin="10 0 0 0" />
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>
</Page>