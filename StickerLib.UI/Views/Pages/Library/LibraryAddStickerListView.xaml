<Page x:Class="StickerLib.UI.Views.Pages.Library.LibraryAddStickerListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      DataContext="{Binding LibraryAddStickers, Source={StaticResource Locator}}"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="14"
      FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibraryAddStickerListView">

    <Grid Margin="20 20 20 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--Help information block-->
        <StackPanel Orientation="Vertical"
                    Grid.Row="0" 
                    Grid.Column="0"
                    Margin="0 0 0 20">
            <TextBlock Text="Adding stickers list"
                       Style="{DynamicResource MaterialDesignTitleTextBlock}"/>
            <TextBlock>
                Here someome description for adding stickers list functions
            </TextBlock>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <!-- кнопки добавления файлов с наименованием и этикетками -->
                <Grid DockPanel.Dock="Top"
                      VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0"
                          HorizontalAlignment="Stretch"
                          Margin="0 0 20 20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <Button VerticalAlignment="Top"
                                Grid.Column="0"
                                Command="{Binding SelectTitleFileCommand, Mode=OneWay}">
                            <StackPanel Orientation="Horizontal">
                                <md:PackIcon Kind="FileCsv" />
                                <TextBlock Text="{Binding TitleButtonText, UpdateSourceTrigger=PropertyChanged}"
                                           Margin="10 0 0 0" />
                            </StackPanel>
                        </Button>
                        <ComboBox Grid.Column="1"
                                  Margin="20 0 0 0"
                                  md:HintAssist.Hint="Delimiter">
                            <ComboBoxItem>Comma</ComboBoxItem>
                            <ComboBoxItem>Colon</ComboBoxItem>
                            <ComboBoxItem>Tab</ComboBoxItem>
                        </ComboBox>
                    </Grid>

                    <Button VerticalAlignment="Top"
                            Grid.Column="1"
                            Command="{Binding SelectStickerFileCommand, Mode=OneWay}"
                            Margin="10 0 10 20">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="FilePdf" />
                            <TextBlock Text="{Binding StickerButtonText, UpdateSourceTrigger=PropertyChanged}"
                                       Margin="10 0 0 0" />
                        </StackPanel>
                    </Button>

                    <Button VerticalAlignment="Top"
                            Grid.Column="2"
                            Command="{Binding LoadCommand, Mode=OneWay}"
                            ToolTipService.ShowOnDisabled="True"
                            ToolTip="{Binding LoadButtonTooltip, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Margin="10 0 0 20">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="Upload" />
                            <TextBlock Text="Load"
                                       Margin="10 0 0 0" />
                        </StackPanel>
                    </Button>
                </Grid>

                <DataGrid Style="{StaticResource DataGridBase}"
                          IsReadOnly="False"
                          ItemsSource="{Binding Titles, UpdateSourceTrigger=PropertyChanged}"
                          md:DataGridAssist.CellPadding="13 8 8 8"
                          md:DataGridAssist.ColumnHeaderPadding="8">
                    <DataGrid.Columns>
                        <md:MaterialDataGridTextColumn Header="Title"
                                                       Binding="{Binding Name}"
                                                       FontWeight="SemiBold"
                                                       Width="3*" />
                        <md:MaterialDataGridComboBoxColumn Header="Page"
                                                           SelectedValueBinding="{Binding PageInFile}"
                                                           ItemsSourceBinding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Page}}, Path=DataContext.Pages}" />
                        <DataGridTemplateColumn Header="Control">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource MaterialDesignToolButton}"
                                            ToolTip="Delete this sticker on Database"
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=SelectedItem}"
                                            Padding="5 0"
                                            Height="Auto">
                                        <md:PackIcon Kind="Delete" />
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>


            </DockPanel>

            <!-- кнопки сохранить и отмены -->
            <StackPanel Orientation="Horizontal"
                        Margin="20 20 0 0"
                        Grid.Row="1"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right">
                <Button Margin="20 0"
                        ToolTipService.ShowOnDisabled="True"
                        ToolTip="{Binding AcceptButtonTooltip, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Command="{Binding AcceptCommand, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon Kind="ContentSave" />
                        <TextBlock Text="Marge"
                                   Margin="10 0 0 0" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignRaisedAccentButton}"
                        Command="{Binding NavigateToCommand, Mode=OneWay}"
                        CommandParameter="library">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon Kind="Cancel" />
                        <TextBlock Text="Cancel"
                                   Margin="10 0 0 0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>


    </Grid>
</Page>