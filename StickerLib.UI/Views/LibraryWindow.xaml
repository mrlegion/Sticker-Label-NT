<Window x:Class="StickerLib.UI.Views.LibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Library Db control" Height="450" Width="800"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0"
                   Grid.Column="0"
                   Background="{DynamicResource DarkColorBg}"
                   Width="200">
            <Border DockPanel.Dock="Top"
                    VerticalAlignment="Top"
                    Background="{DynamicResource LightDarkColorBg}"
                    Padding="20" Margin="0 0 0 15">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Sticker Library"
                               Typography.Capitals="AllSmallCaps"
                               Foreground="{StaticResource WhiteTextColor}"
                               TextAlignment="Center"
                               Style="{StaticResource MaterialDesignTitleTextBlock}"/>
                    <Line X1="0" Y1="0"
                          X2="160" Y2="0"
                          Stroke="{DynamicResource PrimaryHueMidBrush}"
                          Margin="0 10"/>
                    <TextBlock Text="Database SQLite Interface"
                               Foreground="{StaticResource MidGrayTextColor}"
                               FontWeight="Light"
                               TextAlignment="Center"
                               FontSize="10"/>
                </StackPanel>
            </Border>

            
        </DockPanel>
        
        <Frame Grid.Row="0" Grid.Column="1"
               x:Name="LibraryFrame"
               Content="{Binding ViewContent}"/>
    </Grid>
</Window>
